                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_weight=".8">
                        <!--<ImageView-->
                            <!--android:layout_width="25dp"-->
                            <!--android:layout_height="25dp"-->
                            <!--android:src="@drawable/ic_power_black_24dp"/>-->

                    </LinearLayout>

                <TextView
