                    android:layout_weight=".4">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_weight=".8">
                        <!--<ImageView-->
                            <!--android:layout_width="25dp"-->
